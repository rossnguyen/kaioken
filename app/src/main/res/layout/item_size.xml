<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="@dimen/all_padding_short">
    <TextView
        android:id="@+id/tvSizePriceAfterPromotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textColor="@color/colorTextPrimary"
        tools:text="2k" />

    <TextView
        android:id="@+id/tvSizePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/all_margin_long"
        android:layout_toStartOf="@id/tvSizePriceAfterPromotion"
        android:layout_centerVertical="true"
        android:textColor="@color/colorTextSecondary"
        tools:text="2k"
        android:visibility="gone"/>

    <RadioButton
        android:id="@+id/radSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/tvSizePrice"
        android:layout_marginEnd="@dimen/all_margin_long"
        android:textColor="@color/colorTextSecondary"/>
</RelativeLayout>