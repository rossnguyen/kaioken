<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/all_padding_long"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/btnShareFacebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginStart="48dp"
        android:padding="@dimen/all_padding_short"
        android:background="@drawable/custom_background_button_transparent_gray_when_click"
        android:orientation="vertical">
        <ImageView
            android:layout_width="@dimen/all_button_on_top_size"
            android:layout_height="@dimen/all_button_on_top_size"
            android:src="@drawable/ic_facebook"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/all_margin_short"
            android:text="@string/detail_store_share_facebook_title"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnShareMessenger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/all_padding_short"
        android:layout_marginEnd="48dp"
        android:background="@drawable/custom_background_button_transparent_gray_when_click"
        android:orientation="vertical">
        <ImageView
            android:layout_width="@dimen/all_button_on_top_size"
            android:layout_height="@dimen/all_button_on_top_size"
            android:src="@drawable/ic_facebook_messenger"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/all_margin_short"
            android:text="@string/detail_store_share_messenger_title"/>
    </LinearLayout>
</RelativeLayout>