<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutOrderInfo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_background_0_radius_masterial4_border_gray_top_bottom"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danh sách đơn hàng"
        android:layout_margin="@dimen/all_margin_short"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/lstOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_background_0_radius_masterial4_border_gray_top_bottom" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/all_padding_long"
        android:paddingTop="@dimen/all_padding_short"
        android:paddingEnd="@dimen/all_padding_long"
        android:paddingBottom="@dimen/all_padding_short">

        <TextView
            android:id="@+id/tvSumQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng 3 phần" />

        <TextView
            android:id="@+id/tvSumMoney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="89K"
            android:textAlignment="textEnd"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutDiscount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/all_padding_long"
        android:paddingTop="@dimen/all_padding_short"
        android:paddingEnd="@dimen/all_padding_long"
        android:paddingBottom="@dimen/all_padding_short">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giảm giá" />

        <TextView
            android:id="@+id/tvDisCountValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0K"
            android:textAlignment="textEnd" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutDelivery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/all_padding_long"
        android:paddingTop="@dimen/all_padding_short"
        android:paddingEnd="@dimen/all_padding_long"
        android:paddingBottom="@dimen/all_padding_short"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phí vận chuyển" />

        <TextView
            android:id="@+id/tvShipMoney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="20k"
            android:textAlignment="textEnd" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/all_padding_long"
        android:paddingTop="@dimen/all_padding_short"
        android:paddingEnd="@dimen/all_padding_long"
        android:paddingBottom="@dimen/all_padding_short">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng cộng"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvFinalMoney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="70K"
            android:textAlignment="textEnd"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>