<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutRootFood"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_background_menu_food_1"
            android:paddingTop="70dp">

            <TextView
                android:id="@+id/tvNameFood_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/all_margin_long"
                android:layout_marginTop="@dimen/all_margin_long"
                android:layout_marginEnd="@dimen/all_margin_long"
                android:layout_centerHorizontal="true"
                android:singleLine="true"
                android:text="Mì tôm gà"
                android:textColor="@color/colorTextSecondary" />

            <TextView
                android:id="@+id/tvPrice_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvNameFood_1"
                android:layout_marginStart="@dimen/all_margin_long"
                android:layout_marginBottom="@dimen/all_margin_short"
                android:text="$ 45k"
                android:textColor="@color/colorTextPrimary"
                android:textStyle="bold" />
        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgAvatar_1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:elevation="@dimen/all_masterial_elevation_card_pickup"
            android:scaleType="centerCrop"
            android:src="@drawable/image_error"
            app:civ_border_color="@color/colorGrayAppLight"
            app:civ_border_width="1dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_background_menu_food_2"
            android:paddingTop="70dp">

            <TextView
                android:id="@+id/tvNameFood_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/all_margin_long"
                android:layout_marginEnd="@dimen/all_margin_long"
                android:singleLine="true"
                android:text="Mì tôm gà"
                android:textColor="@color/colorTextSecondary" />

            <TextView
                android:id="@+id/tvPrice_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvNameFood_2"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="@dimen/all_margin_short"
                android:text="$ 45k"
                android:textColor="@color/colorTextPrimary"
                android:textStyle="bold" />
        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgAvatar_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:elevation="@dimen/all_masterial_elevation_card_pickup"
            android:scaleType="centerCrop"
            android:src="@drawable/image_error"
            app:civ_border_color="@color/colorGrayAppLight"
            app:civ_border_width="1dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/custom_background_menu_food_3"
            android:paddingBottom="70dp">

            <TextView
                android:id="@+id/tvPrice_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/all_margin_short"
                android:layout_marginEnd="@dimen/all_margin_long"
                android:text="$ 45k"
                android:textColor="@color/colorTextPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNameFood_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvPrice_3"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/all_margin_long"
                android:layout_marginEnd="@dimen/all_margin_long"
                android:layout_marginBottom="@dimen/all_margin_long"
                android:singleLine="true"
                android:text="Mì tôm gà"
                android:textColor="@color/colorTextSecondary" />


        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgAvatar_3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:elevation="@dimen/all_masterial_elevation_card_pickup"
            android:scaleType="centerCrop"
            android:src="@drawable/image_error"
            app:civ_border_color="@color/colorGrayAppLight"
            app:civ_border_width="1dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/custom_background_menu_food_4"
            android:paddingBottom="70dp">

            <TextView
                android:id="@+id/tvPrice_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/all_margin_long"
                android:layout_marginTop="@dimen/all_margin_short"
                android:text="$ 45k"
                android:textColor="@color/colorTextPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNameFood_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tvPrice_4"
                android:layout_marginStart="@dimen/all_margin_long"
                android:layout_marginEnd="@dimen/all_margin_long"
                android:layout_marginBottom="@dimen/all_margin_long"
                android:singleLine="true"
                android:text="Mì tôm gà"
                android:textColor="@color/colorTextSecondary" />


        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgAvatar_4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:elevation="@dimen/all_masterial_elevation_card_pickup"
            android:scaleType="centerCrop"
            android:src="@drawable/image_error"
            app:civ_border_color="@color/colorGrayAppLight"
            app:civ_border_width="1dp" />
    </RelativeLayout>


</RelativeLayout>
