<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layoutShowImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhiteApp" />

        <LinearLayout
            android:id="@+id/layoutHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/all_margin_long"
                android:layout_weight="0.6"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/medium_size_text"
                    android:textStyle="bold" />

                <agv.kaak.vn.kaioken.widget.TextViewKMoney
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:tvkm_k_color="@color/colorTextSecondary"
                    app:tvkm_k_size="@dimen/medium_size_text"
                    app:tvkm_text="0"
                    app:tvkm_text_color="@color/colorTextSecondary"
                    app:tvkm_text_size="@dimen/medium_size_text" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_line_split_super_slim"
            android:background="@color/colorGrayAppLight" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/all_margin_long"
                android:textColor="@color/colorTextSecondary" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layoutCover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/ibtnBack"
            android:layout_width="@dimen/all_button_on_top_size"
            android:layout_height="@dimen/all_button_on_top_size"
            android:layout_margin="@dimen/all_margin_short"
            android:layout_gravity="top|left"
            android:background="@drawable/custom_background_5_radius_mist_2_gray_border"
            android:src="@drawable/ic_close"
            android:tint="@color/colorWhiteApp" />
    </RelativeLayout>
</FrameLayout>