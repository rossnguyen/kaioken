<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/layoutHeader"
        layout="@layout/custom_toolbar" />

    <agv.kaak.vn.kaioken.widget.InputText
        android:id="@+id/edtMoneyLimit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutHeader"
        android:inputType="number"
        android:maxLength="15"
        android:padding="@dimen/all_padding_short"
        app:it_title="@string/finance_enter_max_money_limit"
        app:it_content=""
        app:it_notnull="true"/>

    <Button
        android:id="@+id/btnConfirm"
        style="@style/OutlinedButtonPrimary"
        android:layout_below="@id/edtMoneyLimit"
        android:layout_marginTop="@dimen/all_margin_short"
        android:layout_marginBottom="@dimen/all_margin_short"
        android:layout_centerHorizontal="true"
        android:text="@string/all_confirm" />

</RelativeLayout>