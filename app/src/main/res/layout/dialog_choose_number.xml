<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/all_padding_long"
        android:background="@drawable/custom_background_0_radius_masterial4_border_gray_top_bottom"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="true"
        android:text="@string/payment_book_choose_count_customer"/>
    <NumberPicker
        android:id="@+id/npChooseNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/all_margin_short"
        android:layout_gravity="center_horizontal"/>
    <Button
        android:id="@+id/btnAccept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/all_margin_long"
        android:layout_marginBottom="@dimen/all_margin_long"
        style="@style/ContainedButtonPrimary"
        android:backgroundTint="@color/colorPrimaryButton"
        android:text="@string/all_ok"/>
</LinearLayout>