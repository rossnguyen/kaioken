<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/all_padding_long"
    android:paddingEnd="@dimen/all_padding_long"
    android:background="@drawable/custom_background_button_transparent_gray_when_click">
    <ImageButton
        android:id="@+id/imgIcon"
        android:layout_width="@dimen/all_button_on_top_size"
        android:layout_height="@dimen/all_button_on_top_size"
        android:background="@android:color/transparent"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_camera"/>
    <LinearLayout
        android:id="@+id/layoutBound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/imgIcon"
        android:layout_marginTop="@dimen/all_margin_short"
        android:layout_marginBottom="@dimen/all_margin_short"
        android:layout_marginStart="@dimen/all_margin_long">
        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvNavigate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="@color/colorPrimaryButton"/>
            <TextView
                android:id="@+id/tvSubText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/tvNavigate"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/colorTextSecondary"/>
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/all_line_split_super_slim"
        android:background="@color/colorGrayAppLight"
        android:layout_marginTop="@dimen/all_margin_long"
        android:layout_below="@id/layoutBound"
        android:layout_toRightOf="@id/imgIcon"
        android:layout_marginLeft="@dimen/all_margin_long"/>
</RelativeLayout>