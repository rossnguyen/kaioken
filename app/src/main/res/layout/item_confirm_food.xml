<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="@dimen/all_padding_long"
    android:paddingTop="@dimen/all_padding_short"
    android:paddingEnd="@dimen/all_padding_long">


    <TextView
        android:id="@+id/tvQuantity"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="@dimen/all_margin_supper_short"
        android:background="@drawable/custom_background_short_corner_secondary"
        android:gravity="center"
        tools:text="1"
        android:textColor="@color/colorWhiteApp"
        android:textSize="@dimen/small_size_text"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tvQuantity"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                tools:text="100k"
                android:textColor="@color/colorTextPrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/all_margin_short"
                android:layout_marginEnd="@dimen/all_margin_short"
                android:layout_toStartOf="@id/tvPrice"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Rau xanh hoa quả đặc biệt"
                    android:textColor="@color/colorTextPrimary" />

                <TextView
                    android:id="@+id/tvUnitPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_money"
                    android:drawablePadding="@dimen/all_padding_short"
                    tools:text="15k" />

                <TextView
                    android:id="@+id/tvSizeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextSecondary"
                    tools:text="Size M" />

                <TextView
                    android:id="@+id/tvTopping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextSecondary"
                    tools:text="Trân châu trắng, Thạch dừa" />

                <TextView
                    android:id="@+id/tvNote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Rau Việt GAP nhá"
                    android:textColor="@color/colorBluePrimary" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_line_split_super_slim"
            android:layout_marginTop="@dimen/all_margin_short"
            android:background="@color/colorGrayAppLight" />
    </LinearLayout>


</RelativeLayout>