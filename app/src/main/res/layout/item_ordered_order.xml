<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutRoot"
    android:orientation="vertical"
    android:padding="@dimen/all_padding_long"
    android:layout_marginBottom="@dimen/all_margin_short"
    android:background="@drawable/custom_background_0_radius_masterial4_border_gray_top_bottom">
    <RelativeLayout
        android:id="@+id/layoutInfoStore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <android.support.v7.widget.CardView
            android:id="@+id/layoutAvatar"
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/all_margin_long"
            app:cardCornerRadius="8dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/imgAvatarStore"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:src="@drawable/image_error"
                    android:scaleType="fitXY"/>
                <TextView
                    android:id="@+id/tvDetailStore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:padding="@dimen/all_padding_short"
                    android:gravity="center_horizontal"
                    android:text="@string/all_see_detail_store"
                    android:textSize="@dimen/small_size_text"
                    android:textColor="@color/colorWhiteApp"
                    android:background="@drawable/custom_background_0_radius_mistapp1_no_border"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:id="@+id/layoutDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/layoutAvatar"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvNameStore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextPrimary"
                android:text="Ca phe song qua"
                android:textSize="@dimen/medium_size_text"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvAddressStore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextSecondary"
                android:text="292/37/20 duong Binh Loi, phuong 13 quan Binh Thanh" />
            <TextView
                android:id="@+id/tvDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="##/##/#### 00:00"
                android:textColor="@color/colorTextSecondary"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_calendar"
                android:drawablePadding="@dimen/all_padding_short"/>
            <TextView
                android:id="@+id/tvSumMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng tiền: 10000k"
                android:textStyle="bold"
                android:textColor="@color/colorTextPrimary"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_money"
                android:drawablePadding="@dimen/all_padding_short"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/all_margin_short">
        <Button
            android:id="@+id/btnRate"
            style="@style/OutlinedButtonPrimary"
            android:layout_width="112dp"
            android:layout_alignParentStart="true"
            android:text="@string/all_rate"/>
        <CheckBox
            android:id="@+id/ckbChoosed"
            android:layout_width="@dimen/all_button_on_top_size"
            android:layout_height="@dimen/all_button_on_top_size"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="4dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnSeeInvoice"
            style="@style/OutlinedButtonPrimary"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@id/ckbChoosed"
            android:layout_marginRight="@dimen/all_margin_long"
            android:layout_alignParentEnd="true"
            android:text="@string/payment_see_invoice"/>

    </RelativeLayout>
</LinearLayout>