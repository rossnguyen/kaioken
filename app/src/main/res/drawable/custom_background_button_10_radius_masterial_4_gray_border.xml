<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true"
        android:state_enabled="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/colorGrayApp"/>
            <corners android:radius="10dp" />
            <solid android:color="@color/colorMasterialGrey_2"/>
        </shape>
    </item>

    <item
        android:state_enabled="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/colorGrayAppLight"/>
            <corners android:radius="10dp" />
            <solid android:color="@color/colorMasterialGrey_4" />
        </shape>
    </item>

    <item
        android:state_enabled="false">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/colorGrayAppSupperLight"/>
            <corners android:radius="10dp" />
            <solid android:color="@color/colorMasterialGrey_4" />
        </shape>
    </item>
</selector>