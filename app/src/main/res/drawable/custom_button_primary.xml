<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:centerColor="#32000000"
                android:endColor="#19000000"
                android:startColor="#32000000" />
        </shape>
    </item>

    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <selector>
            <item android:state_pressed="true">
                <shape xmlns:android="http://schemas.android.com/apk/res/android">
                    <solid android:color="@color/colorGrayAppSupperLight" />
                </shape>
            </item>

            <item android:state_enabled="false">
                <shape xmlns:android="http://schemas.android.com/apk/res/android">
                    <solid android:color="@color/colorGrayApp" />
                </shape>
            </item>

            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android">
                    <solid android:color="@color/colorGrayAppLight" />
                </shape>
            </item>
        </selector>
    </item>
</layer-list>