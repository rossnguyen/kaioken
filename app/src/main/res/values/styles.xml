<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/StyleTexViewPrimary</item>
        <item name="editTextStyle">@style/StyleEditTextPrimary</item>
        <item name="buttonStyle">@style/StyleButtonPrimary</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="bottomSheetDialogTheme">@style/StyleBottomSheetPrimary</item>

        <!--&lt;!&ndash; enable window content transitions  &ndash;&gt;
        <item name="android:windowActivityTransitions">true</item>

        &lt;!&ndash; specify enter and exit transitions &ndash;&gt;
        <item name="android:windowEnterTransition">@transition/fade</item>
        <item name="android:windowExitTransition">@transition/explode</item>-->
    </style>

    <!-- style for primary -->
    <style name="StyleTexViewPrimary" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textColorHint">@color/colorTextDisable</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>
        <item name="android:fontFamily">@font/cabin</item>
    </style>

    <style name="StyleEditTextPrimary" parent="android:Widget.EditText">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textColorHint">@color/colorTextDisable</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>
        <item name="android:fontFamily">@font/cabin</item>
    </style>

    <style name="StyleButtonPrimary" parent="android:Widget.Button">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textColorHint">@color/colorTextDisable</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>
        <item name="android:textSize">@dimen/all_button_text_size</item>
        <item name="android:fontFamily">@font/cabin</item>
    </style>

    <style name="StyleBottomSheetPrimary" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <!--NoActionbar theme-->
    <style name="AppTheme.NoActionbar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--set background and text color for statusbar, from API 21 -->
        <item name="android:statusBarColor">@color/colorGrayAppLight</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="progressDialogPrimary" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/colorBlackPrimary</item>
        <item name="android:background">@color/colorMasterialGrey_4</item>
        <item name="colorAccent">@color/colorBlackPrimary</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/colorGrayAppLight</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/colorMasterialGrey_2</item>
        <item name="colorPrimaryDark">@color/colorGrayApp</item>
        <item name="colorAccent">@color/colorBlackPrimary</item>
        <item name="android:textViewStyle">@style/StyleTexViewPrimary</item>
        <item name="editTextStyle">@style/StyleEditTextPrimary</item>
        <item name="buttonStyle">@style/StyleButtonPrimary</item>
    </style>

    <!--dialog full screen -->
    <style name="DialogFullScreen">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="AlertDialogPrimary">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColor">@color/colorRedPrimary</item>
    </style>

    <!-- tab on pager not all caps -->
    <style name="TextAppearanceNomal" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--NoActionbar fill statusbar theme-->
    <style name="AppTheme.NoActionbar.FillStatusBar" parent="AppTheme.NoActionbar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!--NoActionbar fill statusbar dark theme-->
    <style name="AppTheme.NoActionbar.FillStatusBarDark" parent="AppTheme.NoActionbar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@color/colorWhiteApp</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="AppTheme.NoActionbar.TransparentStatusBar" parent="AppTheme.NoActionbar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@color/caldroid_transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
    </style>

    <style name="BorderScan">
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@color/colorWhiteApp</item>
    </style>

    <style name="TextButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/all_button_height</item>
        <item name="android:paddingLeft">@dimen/all_button_padding</item>
        <item name="android:paddingRight">@dimen/all_button_padding</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/custom_background_button_text</item>
    </style>

    <style name="OutlinedButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/all_button_height</item>
        <item name="android:paddingLeft">@dimen/all_button_padding</item>
        <item name="android:paddingRight">@dimen/all_button_padding</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/custom_background_button_outlined</item>
    </style>

    <style name="ContainedButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/all_button_height</item>
        <item name="android:paddingLeft">@dimen/all_button_padding</item>
        <item name="android:paddingRight">@dimen/all_button_padding</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/custom_background_button_contained</item>
    </style>

    <style name="ContainedButtonNoOpacity" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/all_button_height</item>
        <item name="android:paddingLeft">@dimen/all_button_padding</item>
        <item name="android:paddingRight">@dimen/all_button_padding</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/custom_background_button_contained_no_opacity</item>
    </style>

    <style name="TextButtonPrimary" parent="TextButton">
        <item name="android:textColor">@color/color_text_text_button</item>
    </style>

    <style name="OutlinedButtonPrimary" parent="OutlinedButton">
        <item name="android:textColor">@color/color_text_outline_button</item>
    </style>

    <style name="ContainedButtonPrimary" parent="ContainedButton">
        <item name="android:textColor">@color/color_text_contained_button</item>
    </style>

    <style name="ContainedButtonSecondary" parent="ContainedButtonNoOpacity">
        <item name="android:textColor">@color/color_text_contained_button</item>
        <item name="android:backgroundTint">@color/colorPrimaryButton</item>
    </style>

    <style name="ImageButtonSecondary" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:padding">@dimen/all_padding_short</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:tint">@color/color_button_primary</item>
        <item name="android:color">@color/color_button_primary</item>
        <item name="android:background">@drawable/custom_background_button_5_radius_masterial_4_gray_border</item>
    </style>

    <style name="ImageViewPrimary">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@drawable/custom_background_transparent_gray_light_border</item>
        <item name="android:padding">1dp</item>
    </style>

    <style name="TextViewBottomNavigation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/medium_size_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorRedPrimary</item>
        <item name="android:background">@drawable/custom_background_0_radius_masterial_2_no_border</item>
    </style>

    <style name="DialogHeaderPrimary">
        <item name="android:textColor">@color/colorBlackPrimary</item>
        <item name="android:background">@drawable/custom_background_white_with_shadow</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/setting_normal_text</item>
        <item name="android:paddingTop">@dimen/view_spacing_big</item>
        <item name="android:paddingBottom">@dimen/view_spacing_big</item>
        <item name="android:paddingStart">@dimen/view_spacing</item>
        <item name="android:paddingEnd">@dimen/view_spacing</item>
    </style>


    <style name="ButtonPrimary_">
        <item name="android:background">@drawable/custom_button_primary</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/view_spacing_big</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorBlackPrimary</item>
    </style>

    <style name="TextViewStatusSocket">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/all_padding_short</item>
        <item name="android:paddingBottom">@dimen/all_padding_short</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="MenuOnHome">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/all_padding_long</item>
        <item name="android:paddingStart">@dimen/all_padding_long</item>
        <item name="android:paddingTop">@dimen/all_padding_short</item>
        <item name="android:paddingEnd">@dimen/all_padding_long</item>
        <item name="android:paddingBottom">@dimen/all_padding_short</item>
        <item name="android:background">@drawable/custom_background_transparent_gray_when_choose</item>
        <item name="android:drawableTint">@color/colorPrimaryButton</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/all_margin_long</item>
    </style>

</resources>

