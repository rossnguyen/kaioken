<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_enabled="true"
        android:state_pressed="false">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/colorGrayAppLight"/>
            <corners android:radius="@dimen/all_corner_short" />
            <solid android:color="@color/colorMasterialGrey_4" />
        </shape>
    </item>

    <item
        android:state_enabled="true"
        android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/colorGrayApp"/>
            <corners android:radius="@dimen/all_corner_short" />
            <solid android:color="@color/colorMasterialGrey_2" />
        </shape>
    </item>

</selector>